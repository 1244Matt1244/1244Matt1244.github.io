body {
    font-family: 'Open Sans', sans-serif;
    line-height: 1.6;
    padding: 20px;
    transition: background-color 0.3s, color 0.3s; /* Smooth transition */
}

/* Light mode (default) */
body.light-mode {
    background-color: white;
    color: black;
}

/* Dark mode */
body.dark-mode {
    background-color: black;
    color: white;
}
